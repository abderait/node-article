{% extends "admin/layout.twig" %}
{% block title %} Modifier un article | {{parent()}} {% endblock %} 
{% block ariane %} {{parent()}} > <a href="/admin/article">bo articles</a>{% endblock %} 


{% block body %}	
<h1>Modifier l'article {{article.title}}</h1>

<form action="/admin/article/update/{{article._id}}" method="post" role="form">
	<div class="form-group">
		<label>Titre :</label>
		<input name="title" id="title" class="form-control"  type="text" value="{{article.title}}">
	</div>

	<div class="form-group">
		<label>Chapo :</label>
		<textarea name="resume" id="resume" class="form-control" >{{article.resume}}</textarea>
	</div>

	<div class="form-group">
		<label>contenu : </label>
		<textarea  class="form-control" name="content" id="content">{{article.content}}</textarea>
	</div>
	<div class="form-group">
		<label>image : </label>
		<input name="picture" class="form-control" id="picture" type="text" value="{{article.picture}}">
	</div>	
	<div class="form-group">
		<label>Publi√© le : </label>
		<input name="published" id="published" type="text"  class="form-control" value="{{article.published}}">
	</div>

	<div class="form-group">
		<label>Auteur : </label>
		<input name="author" id="author" type="text"  class="form-control" value="{{article.author}}">
	</div>

	<div class="form-group">
		<label>_id : </label>
		<input name="_id" id="_id" class="form-control"  type="text" value="{{article._id}}" disabled>
	</div>

	<div>
		<input type="submit" class="btn btn-primary" value="ok">
	</div>
</form>


{% endblock %}



