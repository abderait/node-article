{% block body %}	
<h1>Ajouter un article</h1>
<form action="/admin/article/add" method="post" role="form">

	<div class="form-group">
		<input name="title" id="title" class="form-control"  type="text" value="Laborum nostrud sit eiusmod exercitation dolore">
