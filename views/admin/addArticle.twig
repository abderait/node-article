		<input name="picture" class="form-control" id="picture" type="text" value="http://lorempixel.com/g/600/350/technics/">
	</div>
	
	<div class="form-group">
		<input name="published" id="published" type="text"  class="form-control" value="09/03 08:48">
	</div>

	<div class="form-group">
		<input name="author" id="author" type="text"  class="form-control" value="Lee Scott">
	</div>
	


