<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{% block description %}description abderait{% endblock %}">
  <meta name="author" content="abderait">
  <link rel="shortcut icon" href="/favicon.ico">
  <title>{% block title %} ADMIN Abderait nodejs app {% endblock %}</title>
  {% block stylesheets %}
    <link rel="stylesheet" href="/css/bootstrap.css" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400' rel='stylesheet' type='text/css'>
  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <script src="/js/html5shiv.js"></script>
    <script src="/js/respond.min.js"></script>
  <![endif]-->
  {% endblock %}
</head>
<body>
  <nav class="navbar navbar-inverse" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/admin">[ADMIN] MY NEWS APP</a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/admin/article">Gestion des Articles</a></li>
          <li><a href="/api/article">Api</a></li>
          <li><a href="/article">Front/Actualité</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="https://github.com/abderait" target="blank">Contact</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">  
    <ul class="list-inline">{% block ariane %}<li><a href="/admin"> <i class="icon-chevron-left"></i> home</a></li>{% endblock %}</ul>
        {% for flashMessage in app.session.flashbag.get('success') %}<div class="alert alert-success">{{ flashMessage }}</div>{% endfor %}
        {% for flashMessage in app.session.flashbag.get('alert') %}<div class="alert alert-alert">{{ flashMessage }}</div>{% endfor %}
        {% block body %}
        {% endblock %}
  </div> <!-- /container -->

  <div id="footer">
    <div class="container">
      <p class="text-muted credit"><a href="https://github.com/abderait" target="_blank">admin - abderait</a>.</p>
    </div>
  </div>
  {% block javascripts %}
  <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>   
  {% endblock %}
</body>
</html>